<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="16dp"
                android:background="@drawable/login"
                tools:context=".MainActivity">




        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tit"

                android:text="Conectarse Al Servidor Del Sistema"
                android:id="@+id/tit"
                android:gravity="center"
                android:fontFamily="@font/bungee_shade"
                android:textColor="#131313"
                android:textSize="24sp"/>
        <ImageView
                android:src="@drawable/base"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@id/tit"
android:foregroundGravity="center"
                android:id="@+id/logo_servidor"/>
        <EditText
                android:id="@+id/ip_conexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="DirecciÃ³n IP"
                android:layout_marginBottom="16dp"
                android:inputType="text"
                android:layout_below="@id/logo_servidor"

                android:background="#FFFFFF"
                android:padding="12dp"
                android:textColor="#000000" />

        <Button
                android:id="@+id/conexion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Conectar a Servidor"
                android:layout_below="@id/ip_conexion"
                android:layout_marginTop="16dp"
                android:textColor="#FFFFFF"
                android:padding="16dp" />





</RelativeLayout>
